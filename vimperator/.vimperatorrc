nmap "<Leader>2" 2b
nmap "<Leader>3" 3b
nmap "<Leader>4" 4b
nmap "<Leader>5" 5b
nmap "<Leader>6" 6b
nmap "<Leader>7" 7b
nmap "<Leader>8" 8b
nmap "<Leader>9" 9b
nmap gl g$
nmap gf g0
nnoremap r <C-r>
nnoremap x <C-w>
" nnoremap "<Leader>pw" <C-S-P>
noremap j 7j
noremap k 7k
noremap h 5h
noremap l 5l

map > gt
